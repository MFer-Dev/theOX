{
  "name": "theox",
  "private": true,
  "version": "0.0.1",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "test": "turbo run test",
    "dev:up": "docker compose up -d",
    "dev:down": "docker compose down",
    "smoke": "pnpm exec tsx scripts/smoke/run.ts",
    "healthcheck": "pnpm exec tsx scripts/healthcheck.ts",
    "core:up": "bash scripts/dev/core-stack.sh up",
    "core:down": "bash scripts/dev/core-stack.sh down",
    "migrate": "bash -c 'for svc in identity discourse safety cred endorse notes purge notifications ops-gateway ops-agents; do pnpm --filter @services/$svc migrate 2>/dev/null || true; done'",
    "clean": "rm -rf node_modules apps/*/node_modules services/*/node_modules platform/*/node_modules workers/*/node_modules .turbo"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.7.0",
    "turbo": "2.7.2",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "react-native-gesture-handler@2.30.0": "patches/react-native-gesture-handler@2.30.0.patch"
    }
  }
}
