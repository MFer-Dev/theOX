# theOX Local Development Environment
# Copy this file to .env and customize as needed
# NEVER commit .env files with real secrets

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=theox_local
POSTGRES_PASSWORD=theox_local_password
POSTGRES_DB=theox_local
DATABASE_URL=postgresql://theox_local:theox_local_password@localhost:5433/theox_local

# =============================================================================
